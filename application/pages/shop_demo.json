{
   "layout": "application",

   "areas": {
      "activities": [
         {
            "widget": "shop-demo/dummy-articles-activity",
            "features": {
               "articles": {
                  "resource": "articles"
               }
            }
         }
      ],

      "contentA": [
         {
            "widget": "shop-demo/article-browser-widget",
            "features": {
               "articles": {
                  "resource": "articles"
               },
               "selection": {
                  "resource": "selectedArticle",
                  "action": "addToCart"
               }
            }
         }
      ],
      "contentB": [
         {
            "widget": "shop-demo/shopping-cart-widget",
            "features": {
               "article": {
                  "resource": "selectedArticle",
                  "onActions": [ "addToCart" ]
               },
               "order": {
                  "target": "finishOrder"
               }
            }
         }
      ]
   }
}
